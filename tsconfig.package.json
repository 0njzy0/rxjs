{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "rxjs": [
        "./package/src"
      ],
      "rxjs/*": [
        "./package/src/*"
      ]
    }
  },
  "include": [
    "./package/src/**/*"
  ],
  "exclude": [
    "./package/src/**/*-spec.ts"
  ]
}
