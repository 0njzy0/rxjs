{
  "name": "rxjs",
  "version": "7.0.0-alpha.0",
  "description": "Reactive Extensions for JavaScript",
  "sideEffects": false,
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.@(js)": [
      "eslint --fix",
      "git add"
    ],
    "*.@(ts)": [
      "tslint --fix",
      "git add"
    ]
  },
  "scripts-info": {
    "info": "List available scripts",
    "test": "Execute mocha test runner",
    "dev": "Watch codebase, trigger compile when source code changes",
    "build": "Builds the files (currently not well implemented)"
  },
  "scripts": {
    "pretest": "shx rm -rf tmp/tests && tsc -p tsconfig.tests.json",
    "test": "cross-env NODE_PATH=tmp/tests/ mocha --opts mocha-options.opts \"tmp/tests/**/*-spec.js\"",
    "dev": "watch 'npm run test' src",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:reactivex/rxjs.git"
  },
  "keywords": [
    "Rx",
    "RxJS",
    "ReactiveX",
    "ReactiveExtensions",
    "Streams",
    "Observables",
    "Observable",
    "Stream",
    "ES6",
    "ES2015"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/reactivex/rxjs/issues"
  },
  "homepage": "https://github.com/reactivex/rxjs",
  "dependencies": {
    "10": "0.0.1",
    "tslib": "^1.9.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^5.0.0",
    "chai": "^4.1.2",
    "commitizen": "^2.10.0",
    "cross-env": "^5.1.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.19.1",
    "mocha": "^5.0.5",
    "shx": "^0.3.2",
    "sinon": "^6.3.4",
    "ts-node": "5.0.1",
    "tsconfig-paths": "^3.3.2",
    "tslint": "^5.9.1",
    "typescript": "^2.9.2",
    "watch": "^1.0.2"
  }
}
